{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,  // <--- DENNA RAD LÖSER TS5097-FELET PÅ VERCEL
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    /* JSX and Type Checking */
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src"]
}